fileview */ tree %c
view
nnoremap w :view<cr>
nmap Q :q!<CR>
nmap ; :
nmap oo :o<CR>
nmap ss :sort<CR>
nmap W :wq<CR>
set viewcolumns=-70%{name},15%{mtime},15%{size}
nnoremap yd :!echo -n %d | xclip %i<cr>
nnoremap yf :!echo -n %c:p | xclip %i<cr>
nnoremap yn :!echo -n %c | xclip %i<cr>
nnoremap yr :!echo -n %c:r | xclip %i<cr>
filetype *.pdf pdf
filetype * o
